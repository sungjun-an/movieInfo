<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/feed_fragment">

    <fragment
        android:id="@+id/feed_fragment"
        android:name="com.example.movieapp.features.feed.FeedFragment"
        android:label="Feed" >
        <action
            android:id="@+id/action_feed_to_detail"
            app:destination="@id/detail_fragment"
            app:launchSingleTop="true" />

        <action
            android:id="@+id/action_feed_to_info"
            app:destination="@id/infoDialogFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.example.movieapp.features.detail.DetailFragment"
        android:label="detail" >
        <argument
            android:name="movieName"
            app:argType="string" />
        <action
            android:id="@+id/action_detail_to_rating"
            app:destination="@id/ratingDialogFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_detail_to_imdb_dialog"
            app:destination="@id/IMDBDialogFragment"
            app:launchSingleTop="true" />
    </fragment>
    <dialog
        android:id="@+id/infoDialogFragment"
        android:name="com.example.movieapp.features.dialog.InfoDialogFragment"
        android:label="InfoDialogFragment" />
    <dialog
        android:id="@+id/IMDBDialogFragment"
        android:name="com.example.movieapp.features.dialog.IMDBDialogFragment"
        android:label="IMDBDialogFragment" >
        <argument
            android:name="url"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/ratingDialogFragment"
        android:name="com.example.movieapp.features.dialog.RatingDialogFragment"
        android:label="RatingDialogFragment" >
        <argument
            android:name="movieName"
            app:argType="string" />
        <argument
            android:name="rating"
            app:argType="float" />
    </dialog>
</navigation>